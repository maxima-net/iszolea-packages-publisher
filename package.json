{
  "name": "iszolea-packages-publisher",
  "version": "0.4.4",
  "description": "An utility to simplify publishing nuget and npm packages",
  "author": {
    "name": "Maxim Kucherov",
    "email": "maxima-net@bk.ru"
  },
  "build": {
    "appId": "iszolea.packages.publisher",
    "files": [
      "build/**",
      "src/electron-starter.js",
      "src/signal-keys.js"
    ],
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "extends": null
  },
  "private": true,
  "dependencies": {
    "cryptr": "^4.0.2",
    "electron-log": "^3.0.8",
    "electron-store": "^2.0.0",
    "electron-updater": "^4.1.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.1",
    "react-scripts": "2.1.8",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0",
    "simple-git": "^1.126.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "test-ci": "set CI=true&&npm test",
    "eject": "react-scripts eject",
    "build-starter": "tsc -p tsconfig.electron-starter.json",
    "electron": "npm run build-starter && electron .",
    "electron-dev": "npm run build-starter && nf start",
    "pre-dist": "rimraf build && rimraf dist && npm run build-starter && npm run build",
    "pack": "npm run pre-dist && electron-builder --dir",
    "dist": "npm run pre-dist && electron-builder",
    "release": "npm run test-ci && npm run pre-dist && build"
  },
  "homepage": "./",
  "main": "src/electron-starter.js",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/cryptr": "^4.0.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-store": "^1.3.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.11.1",
    "@types/object-hash": "^1.3.0",
    "@types/react": "16.8.7",
    "@types/react-dom": "16.8.2",
    "@types/react-redux": "^7.1.4",
    "electron": "^4.2.11",
    "electron-builder": "^20.44.4",
    "electron-devtools-installer": "^2.2.4",
    "foreman": "^3.0.1",
    "node-sass": "^4.12.0",
    "react-app-rewired": "^2.1.3",
    "ts-node": "^8.4.1",
    "typescript": "3.3.3333"
  }
}
